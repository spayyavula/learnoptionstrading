# ============================================================================
# Azure Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# For production, set these in Azure Static Web Apps configuration

# ============================================================================
# MICROSOFT ENTRA EXTERNAL ID AUTHENTICATION
# ============================================================================
# Get these from Azure Portal > Microsoft Entra External ID > App registrations

# Application (client) ID from your app registration
VITE_AZURE_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Tenant ID (Directory ID) from your Entra External ID tenant
VITE_AZURE_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Your External ID tenant name (without .onmicrosoft.com)
# Example: if your tenant is "optionsacademystaging.onmicrosoft.com", use "optionsacademystaging"
VITE_AZURE_TENANT_NAME=your-tenant-name

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Azure Functions API URL
# Staging: https://optionsacademy-staging-api.azurewebsites.net/api
# Production: https://optionsacademy-prod-api.azurewebsites.net/api
VITE_API_BASE_URL=https://optionsacademy-staging-api.azurewebsites.net/api

# ============================================================================
# MARKET DATA APIs
# ============================================================================
# Polygon.io API key for real-time market data
VITE_POLYGON_API_KEY=your_polygon_api_key
VITE_POLYGON_BASE_URL=https://api.polygon.io

# ============================================================================
# STRIPE PAYMENT INTEGRATION
# ============================================================================
# Use test keys for staging, live keys for production
# Get keys from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLIC_KEY=pk_test_...

# ============================================================================
# FEATURE FLAGS
# ============================================================================
VITE_ENABLE_REAL_TIME_DATA=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DATA_PERSISTENCE=true

# ============================================================================
# DATA CONFIGURATION
# ============================================================================
VITE_HISTORICAL_DATA_RETENTION_DAYS=30
VITE_OPTIONS_UPDATE_INTERVAL=5000
VITE_MAX_HISTORICAL_DAYS=14

# ============================================================================
# OPTIONAL - SENTIMENT ANALYSIS & NEWS
# ============================================================================
VITE_NEWS_API_KEY=your_news_api_key
VITE_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
VITE_FINNHUB_API_KEY=your_finnhub_key
VITE_HUGGINGFACE_API_KEY=your_huggingface_key
VITE_FINANCIAL_MODELING_PREP_API_KEY=your_fmp_key

# Sentiment sync settings
VITE_AUTO_START_SENTIMENT_SYNC=true
VITE_SENTIMENT_SYNC_INTERVAL_MINUTES=15
