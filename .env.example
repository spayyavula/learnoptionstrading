# Microsoft Entra External ID (CIAM) Configuration (REQUIRED for authentication)
VITE_AZURE_CLIENT_ID=your-azure-client-id
VITE_AZURE_TENANT_ID=your-tenant-id
# For CIAM (consumer identity), set the tenant subdomain
# For standard Entra ID (work/school accounts), leave empty
VITE_AZURE_TENANT_SUBDOMAIN=your-tenant-subdomain

# Polygon.io API (REQUIRED for US market real-time data)
VITE_POLYGON_API_KEY=your-polygon-api-key

# Zerodha Kite Connect API (REQUIRED for Indian market data)
# Sign up at: https://kite.trade/
# Pricing: ₹2,000 one-time setup + ₹2,000/month
VITE_ZERODHA_API_KEY=your-zerodha-api-key
VITE_ZERODHA_API_SECRET=your-zerodha-api-secret
VITE_ZERODHA_ACCESS_TOKEN=your-zerodha-access-token

# Feature Flags
VITE_ENABLE_REAL_TIME_DATA=true
VITE_ENABLE_MOCK_DATA=false
VITE_DEFAULT_MARKET=US  # US or INDIA

# Stripe Configuration (OPTIONAL - for payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
VITE_STRIPE_MONTHLY_PRICE_ID=price_your-monthly-price-id
VITE_STRIPE_YEARLY_PRICE_ID=price_your-yearly-price-id
VITE_STRIPE_COFFEE_PRICE_ID=price_your-coffee-price-id

# Additional API Keys (OPTIONAL)
VITE_ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
VITE_FINNHUB_API_KEY=your-finnhub-key
VITE_NEWS_API_KEY=your-news-api-key
VITE_HUGGINGFACE_API_KEY=your-huggingface-key
VITE_FINANCIAL_MODELING_PREP_API_KEY=your-fmp-key

# Email Marketing (OPTIONAL)
VITE_CONSTANT_CONTACT_API_KEY=your-constant-contact-key
VITE_CONSTANT_CONTACT_ACCESS_TOKEN=your-access-token
VITE_CONSTANT_CONTACT_LIST_ID=your-list-id

# Community Features (OPTIONAL)
VITE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
VITE_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK
VITE_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
VITE_TELEGRAM_CHAT_ID=your-telegram-chat-id
VITE_TELEGRAM_CHANNEL=@your-channel
VITE_WHATSAPP_GROUP_INVITE=https://chat.whatsapp.com/YOUR-INVITE
VITE_FACEBOOK_GROUP_ID=your-facebook-group-id

# Buy Me a Coffee (OPTIONAL)
VITE_BUY_ME_COFFEE_USERNAME=your-username
VITE_BUY_ME_COFFEE_WIDGET_ID=your-widget-id

# Application Settings (OPTIONAL)
VITE_APP_NAME=Learn Options Trading
VITE_APP_VERSION=1.0.0
VITE_ENABLE_DATA_PERSISTENCE=true
VITE_ENABLE_OPTIONS_TRADING=true
VITE_ENABLE_ADVANCED_CHARTS=true
VITE_HISTORICAL_DATA_RETENTION_DAYS=365
VITE_OPTIONS_UPDATE_INTERVAL=60000
VITE_MAX_HISTORICAL_DAYS=365
VITE_DEFAULT_PORTFOLIO_VALUE=100000

# Note: All environment variables MUST be prefixed with VITE_ to be accessible in the frontend.
# After updating this file, restart your dev server for changes to take effect.
